{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\server",
            "program": "${workspaceFolder}\\server\\index.js"
        },
        {
            "type": "node-terminal",
            "name": "Debug Client",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}\\client"
        }
    ]
}